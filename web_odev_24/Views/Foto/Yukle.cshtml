@{
    ViewData["Title"] = "Resim Yükle";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Fotoğraf Yükle</h1>
        <form method="post" enctype="multipart/form-data" asp-action="Yukle" class="border p-4 rounded">
            <div class="form-group">
                <label for="image">Resim Yükle:</label>
                <input type="file" class="form-control-file" name="image" id="image" />
            </div>
            <div class="form-group">
                <label for="hairType">Saç Tipi:</label>
                <input type="text" class="form-control" name="hairType" id="hairType" placeholder="Örn: 201" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Gönder</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.ApiResponse))
        {
            <div class="mt-5">
                <h3 class="text-center">API Yanıtı:</h3>
                <pre class="p-3 bg-light border rounded">@ViewBag.ApiResponse</pre>
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
   
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
