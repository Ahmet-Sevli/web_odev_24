@model IEnumerable<CalisanViewModel>
<h1>Index</h1>

<p>
    <a asp-action="Calisanlari_goruntule"></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.calisan_ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.calisan_soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.calisan_tecrube)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.islem_ad)
            </th>

            <th>
                 Düzenleme Seçenekleri
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.calisan_ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.calisan_soyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.calisan_tecrube)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.islem_ad)
            </td>
            <td>
                <a asp-action="Calisan_duzenle" asp-route-id="@item.calisanID">Düzenle</a> |
                <a asp-action="Calisan_detay" asp-route-id="@item.calisanID">Detay</a> |
               <a asp-action="Calisan_sil" asp-route-id="@item.calisanID">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
