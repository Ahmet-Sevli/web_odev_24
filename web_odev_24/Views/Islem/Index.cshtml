@model IEnumerable<web_odev_24.Models.Islem>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.islem_ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.islem_ucret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.islem_sure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.islem_ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.islem_ucret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.islem_sure)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.islemID" class="btn btn-outline-success">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.islemID" class="btn btn-outline-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.islemID" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>


