@model web_odev_24.Models.Musteri

<h2>Kayıt Ol</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="musteri_ad"></label>
        <input asp-for="musteri_ad" class="form-control" />
        <span asp-validation-for="musteri_ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="musteri_soyad"></label>
        <input asp-for="musteri_soyad" class="form-control" />
        <span asp-validation-for="musteri_soyad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="musteri_telefon"></label>
        <input asp-for="musteri_telefon" class="form-control" />
        <span asp-validation-for="musteri_telefon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="musteri_email"></label>
        <input asp-for="musteri_email" class="form-control" />
        <span asp-validation-for="musteri_email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="musteri_sifre"></label>
        <input asp-for="musteri_sifre" type="password" class="form-control" />
        <span asp-validation-for="musteri_sifre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}